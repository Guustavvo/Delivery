<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/views/css/det_produto.css">
    <title>Document</title>
</head>
<body>{{#each user}}
    <header>

            <h4>Delivery</h4>

        {{#each ../produto}}
           <div id="voltar">
                <a href="/produtos/{{categoria}}/{{../token}}">Voltar</a>
           </div>
        {{/each}}

        {{#each ../produto}}
            <div class="menu">
                <img src="/views/uploads/{{imagem}}" alt="">



                <p class="nomeProduto">{{nome}}</p>
                <p class="descProduto">{{desc}}</p>

                <form action="/CriarPedido/{{../token}}/{{id}}" method="post">
                    <div id="quantidadeCalc">
                        <button id="menos" type="button">-</button>
                        <input type="text" name="quantidade" value="1" id="quantidade">
                        <input type="text" id="precoUnidade" value="{{preco}}" hidden>
                        <button id="mais" type="button">+</button>
                    </div>

                    <p class="precoProduto">R${{preco}}</p>

                    <button id="addPedido">Adicionar ao pedido</button>
                </form>
            </div>
        {{/each}}
           
    </header>
    {{/each}}
</body>
<script src="/views/js/det_produto.js"></script>
</html>